{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "esModuleInterop": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "lib": ["ES2020"],
        "moduleResolution": "Node",
        "strict": true,
        "target": "ES2020",
        "typeRoots" : ["./node_modules/@types"],
        "experimentalDecorators": true,
        "declaration": true,
    },
    "include": [
        "vertex/**/*.ts",
    ],
    "exclude": [
        "vertex/**/*-test.ts",
        "node_modules"
    ]
}
